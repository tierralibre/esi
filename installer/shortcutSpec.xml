	<shortcut
		name="ESI Server"
		target="$INSTALL_PATH\ESI.exe"
		commandLine=""
		workingDirectory="$INSTALL_PATH"
        description="Start ESI server"
		iconFile="$INSTALL_PATH\html\www\favicon.ico"
        iconIndex="0"
        initialState="normal"
        programGroup="yes"
